<%= stylesheet_link_tag "style", :media => "all" %>
<!DOCTYPE html>
<html>

  <%= render "layouts/title" %>


  <body>

    <header>
      <%= render "layouts/header" %>
    </header>

    <div id="main">
      <p><%= image_tag("main-img.jpg", alt: "main") %></p>
    </div>

    <div id="article_wrap">
      <%= yield %>
      <div id="sidebar">
        <%= render "layouts/sidebar" %>
      </div>
      <div class="clear"></div>
      </div>
      <%= debug(params) if Rails.env.development? %>
    </div>


    <footer>
      <%= render 'layouts/footer' %>
    </footer>


  </body>
</html>